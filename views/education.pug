//- Education Entry 

mixin entry(title, company, date, location)
  li.entry
    h1.d-flex.w-100.justify-content-between.align-items-center
      span= title
      small= date
    h2.d-flex.w-100.justify-content-between.align-items-center
      span= company
      span= location
    if block
      ul.bullets
        block
  
  
  
//- Bullet

mixin bullet
  li.bullet
    block




