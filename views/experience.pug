//- Experience Entry 

mixin entry(title, company, date, location)
  li.entry.list-group-item
    .d-flex.w-100.justify-content-between
      h1= title 
      small= date
    .d-flex.w-100.justify-content-between
      h2= company
      small= location
    if block
      ul
        block
  
  
  
//- Bullet

mixin bullet
  li 
    block





