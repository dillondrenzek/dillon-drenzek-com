doctype
html(lang="en" ng-app="DrenzekDillon")
	head
		title Dillon Drenzek | Up & Coming Web Developer
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1")

		link(rel="stylesheet" href="/font-awesome/css/font-awesome.min.css")
		link(rel="stylesheet" href="/css/main.css")

		//- Vendor Scripts 
		script(src="/angular/angular.min.js")
		script(src="/angular-route/angular-route.min.js")


		//- Google Analytics
		script.
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');
			ga('create', 'UA-67261358-1', 'auto');
			ga('send', 'pageview');

		//- Catch Mobile Browsers
		script.
			(function(){
				if ((screen.width < 768) ||
					(window.innerWidth && window.innerWidth < 768)) {
					window.location.replace("http://localhost:8081/mobile");
				}
			})();



	body
		#site-border
		#site-title
				
			//- <!-- Logo -->
			#logo
				h1 Dillon Drenzek
				.subtitle Up & Coming Developer
				
			//- <!-- Social Media Links -->
			ul(id="social-media")
				li
					a(href="https://github.com/dillondrenzek")
						i.fa.fa-github
				li
					a(href="https://www.linkedin.com/in/dillondrenzek")
						i.fa.fa-linkedin
				li
					a(href="https://behance.net/dillondrenzek/")
						i.fa.fa-behance
				li
					a(href="https://twitter.com/DrEnzek")
						i.fa.fa-twitter

			//- <!-- Nav Links -->
			nav
				ul
					li: a(href="/resume") Resume
					li: a(href="#/") Home

		.page
			.column.quarter
			.column.most(ng-view)



		//- Angular
		//- App 
		script(src="/js/app.js")

		//- Controllers
		script(src="/js/controllers/homepage-controller.js")
		script(src="/js/controllers/project-list-controller.js")
		script(src="/js/controllers/project-show-controller.js")
		script(src="/js/controllers/skill-list-controller.js")

		//- Directives
		script(src="/js/directives/projects.js")
		script(src="/js/directives/skills.js")
		script(src="/js/directives/links.js")

		//- Routes
		script(src="/js/routes.js")


