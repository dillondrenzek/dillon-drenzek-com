/* 
	Page Structure 
	
					*/

// Column Containers
.page
	width 100%
	display block
	Clearfix()
	
section
	display block
	width 100%
	padding-left StandardPadding
	margin-bottom 50px
	Clearfix()

.page-title
	height 137px
	margin-bottom 0
	
.section-title,
.project-title
	padding ThickPadding 0
	Clearfix()
	
.project-title
	padding-left StandardPadding


// Columns
.column
	min-height 1px
	float left
	padding-left StandardPadding
	padding-bottom StandardPadding

.three-column > .column
	width 33.33333%

.two-column > .column
	width 50%
	

// Page Title
.page-title .title
	position absolute
	left 0
	bottom StandardPadding
	width 80%
	
.page-title .links
	position absolute
	left 80%
	bottom StandardPadding
	width 20%
	
.section-title .title
	float left 
	width 80%

.section-title .links 
	float left
	width 20%
	
.project-title .title
	padding-left StandardPadding
	float left
	width 80%
	
.project-title .links
	float left
	width 20%

// Link Lists
.links
	li.link
		display block
		
.dd-link
	InlineChildren(middle)
	i
		margin-right StandardPadding
		
.page-title
	li.link
		margin-top StandardPadding
		&:nth-child(1) // First Child
			margin-top 0
	
	a.dd-link
		i
			margin-right ThickPadding


// Skills List
ul.skills
	padding StandardPadding
	padding-left 0
	Clearfix()
	li.skill
		float left
		margin ThinPadding
		padding 0 ThinPadding

ul.bullets
	padding ThickPadding
	padding-top 0
	li.bullet
		margin-bottom ThickPadding

// Figure
figure
	img
		width 100%





