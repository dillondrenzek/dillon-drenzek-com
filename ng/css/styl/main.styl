/*   
	Page & Character Styles  
						*/

// Page Title
.page-title
	border-top 0
	.primary
		FiraSans(3rem, 700, Black, -0.03125em, left)
		line-height 1em
	.secondary
		FiraSans(1rem, 400, Red, 0.0714285em, left)
		text-transform uppercase

// Section Title
.section-title
	.primary
		FiraSans(1.45rem, 400, Dark, 0.125em, left)
		line-height 1em
		text-transform uppercase
	.secondary
		FiraSans(1rem, 200, Black, 0.140625em, left)
		
// Column Title
.column-title
	.primary
		FiraSans(1rem, 400, Red, 0.0714285em, left)
		text-transform uppercase
	.secondary
		FiraSans(0.875rem, 200, Black, 0.0714285em, left)
		text-transform uppercase

// Sections
section
	border-top 1px solid Light

// DD Links
a.dd-link
	FiraSans(0.75rem, 700, Black, 0.0714285em, left)
	text-transform uppercase
	p
		font-size 1em
	i
		font-size 1.1em
	&:hover
		i
			color Red
		p
			color Red
			text-decoration underline
	&:active
		i
			color Red
		p
			color Red

.page-title
	a.dd-link
		font-size 1rem

.project-title
	a.dd-link
		font-size 0.75rem	




// Project Bullet Points (Medium Project)
ul.bullets
	li.project-bullet
		font-weight 400
		font-size 0.95rem
		letter-spacing 0em
		margin-bottom StandardPadding
		margin-left ThickPadding
		list-style-type circle

// Generic Bullets
ul.bullets
	li.bullet
		FiraSans(1.25rem, 700, Dark, -0.027916em, left)
		list-style-position outside
		list-style-type circle

// Quote Text
p.quote
	Char-Body()
	font-size 1.1rem
	color Black
	font-style italic
	line-height 1.325em



// Skills
.skill.small
	background white
	border-radius 3px
	border 1px solid Light
	a, p
		FiraSans(0.65rem, 400, Dark, 0.0714285em, left)
		text-transform uppercase
	
.skill.medium
	background white
	border-radius 3px
	border 1px solid Light
	a, p
		FiraSans(0.875rem, 400, Dark, 0.0714285em, left)
		text-transform uppercase
		
.skill.large
	background white
	border none
	width 100%
	a, p
		FiraSans(1rem, 700, Black, -0.027916em, left)
	


// Projects
.project
	background white
	border 1px solid Light
	border-left 3px solid Light

